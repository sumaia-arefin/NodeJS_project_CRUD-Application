<form action="/api/users" method="post" id="add_user">
    <div class="new_user">

        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Avengers">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Director</label>
            <input type="text" name="email" value="" placeholder="Joss Wheadon">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Hit or Flop</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Hit">
                <label for="radio-2" class="radio-label">Hit</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Flop">
                <label for="radio-3" class="radio-label">Flop</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active">
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive">
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
    </form>